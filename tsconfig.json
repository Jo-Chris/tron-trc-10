{
  "compilerOptions": {
    "lib": [
      "ES2015", "dom"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "moduleResolution": "NodeNext",
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "preserveConstEnums": true,
    "outFile": "../../built/local/tsc.js",
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}